<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="#71acc0" tools:layout_editor_absoluteY="25dp">

    <android.support.v7.widget.Toolbar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar3" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Voltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/voltar_ec"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintBottom_toBottomOf="@+id/toolbar"
            style="@style/Widget.AppCompat.Button.Borderless" android:textColor="@android:color/white"
            android:textStyle="bold" android:textSize="18sp"/>
    <TextView
            android:text="Feira das Profissões"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/feira_title3"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar3"
            app:layout_constraintTop_toTopOf="@+id/toolbar3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:textSize="24sp" android:textColor="@android:color/white"
            android:textStyle="bold" android:layout_marginTop="8dp"/>
    <TextView
            android:id="@+id/textView4"
            style="@style/border"
            android:layout_width="0dp"

            android:layout_height="wrap_content"
            android:gravity="left"
            android:lineSpacingExtra="8sp"

            android:text="ENGENHARIA DA COMPUTAÇÃO"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:typeface="monospace"
            app:fontFamily="sans-serif"
            android:textStyle="bold" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/toolbar3"/>

    <TextView
            android:textSize="20dp"
            android:textColorLink="#0011FF"
            android:textStyle="bold"

            android:textColor="@android:color/white"
            android:text="Saiba mais no link: https://www.unifor.br/web/graduacao/engenharia-da-computacao"
            android:autoLink="web"
            android:layout_width="353dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editText5"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText5"
            android:singleLine="true"
            android:selectAllOnFocus="true"

            android:text="O engenheiro de computação terá formação nas áreas de hardware e software, podendo implantar e coordenar projetos de sistemas de computação. Atuará na definição e implementação de projetos de arquiteturas de computadores, redes de computadores e processos de automação industrial, sistemas baseados em microprocessadores para aplicações industriais, comerciais e científicas."
            android:textSize="20sp" android:textColor="@android:color/white"
            android:gravity="left"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" android:textStyle="bold"/>
    <ImageView
            android:layout_width="295dp"
            android:layout_height="131dp" app:srcCompat="@drawable/ec"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"/>
</android.support.constraint.ConstraintLayout>
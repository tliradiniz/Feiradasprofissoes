<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#71acc0"
    tools:context=".RegistroActivity">

    <android.support.v7.widget.Toolbar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Voltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_voltar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintBottom_toBottomOf="@+id/toolbar"
            style="@style/Widget.AppCompat.Button.Borderless" android:textColor="@android:color/white"
            android:textStyle="bold" android:textSize="18sp" app:layout_constraintVertical_bias="0.6"/>
    <TextView
            android:text="Feira das Profissões"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:id="@+id/feira_title2"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar"
            app:layout_constraintStart_toStartOf="@+id/toolbar2" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:textSize="24sp" android:textColor="@android:color/white"
            android:textStyle="bold" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/toolbar2"/>
    <EditText
            android:id="@+id/username_edittext"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="32dp"

            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginStart="32dp"
            android:background="@drawable/rounded_edittext_registre_login"
            android:ems="10"
            android:hint="Usuário"
            android:inputType="textPersonName"
            android:paddingLeft="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/toolbar2"/>

    <EditText
        android:id="@+id/email_edittext"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_edittext_registre_login"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="16dp"
        app:layout_constraintEnd_toEndOf="@+id/username_edittext"
        app:layout_constraintStart_toStartOf="@+id/username_edittext"
        app:layout_constraintTop_toBottomOf="@+id/username_edittext" />

    <EditText
        android:id="@+id/password_edittext"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_edittext_registre_login"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword"
        android:paddingLeft="16dp"
        app:layout_constraintEnd_toEndOf="@+id/email_edittext"
        app:layout_constraintStart_toStartOf="@+id/email_edittext"
        app:layout_constraintTop_toBottomOf="@+id/email_edittext" />

    <EditText
        android:id="@+id/escola_edittext"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_edittext_registre_login"
        android:ems="10"
        android:hint="Escola"
        android:inputType="textPersonName"
        android:paddingLeft="16dp"
        app:layout_constraintEnd_toEndOf="@+id/password_edittext"
        app:layout_constraintStart_toStartOf="@+id/password_edittext"
        app:layout_constraintTop_toBottomOf="@+id/password_edittext" />

    <EditText
        android:id="@+id/tipodeescola_edittext"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_edittext_registre_login"
        android:ems="10"
        android:hint="Tipo de escola"
        android:inputType="textPersonName"
        android:paddingLeft="16dp"
        app:layout_constraintEnd_toEndOf="@+id/escola_edittext"
        app:layout_constraintStart_toStartOf="@+id/escola_edittext"
        app:layout_constraintTop_toBottomOf="@+id/escola_edittext" />

    <EditText
        android:id="@+id/cidade_edittext"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_edittext_registre_login"
        android:ems="10"
        android:hint="Cidade"
        android:inputType="textPersonName"
        android:paddingLeft="16dp"
        app:layout_constraintEnd_toEndOf="@+id/tipodeescola_edittext"
        app:layout_constraintStart_toStartOf="@+id/tipodeescola_edittext"
        app:layout_constraintTop_toBottomOf="@+id/tipodeescola_edittext" />

    <Button
        android:id="@+id/registro_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_button"
        android:text="Registrar"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/cidade_edittext"
        app:layout_constraintStart_toStartOf="@+id/cidade_edittext"
        app:layout_constraintTop_toBottomOf="@+id/cidade_edittext" />

    <TextView
        android:id="@+id/contaCriada_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Já possui conta?"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/registro_button"
        app:layout_constraintStart_toStartOf="@+id/registro_button"
        app:layout_constraintTop_toBottomOf="@+id/registro_button" />
</android.support.constraint.ConstraintLayout>